<install type="module" version="1.5.0" method="upgrade">
    <name>Jmonoslideshow_v1</name>
    <version>1.3</version>
    <description>Jmonoslideshow Module v1.3.2</description>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <author>Matthieu BARBE</author>
    <authoremail>matthieu@ccomca.com</authoremail>
    <authorurl>ccomca.com</authorurl>
    <copyright>Copyright (C) 2005 - 2009 CCC All rights reserved.</copyright>
    <creationDate>05-Oct-2009</creationDate>
    <files>
        <folder>assets</folder>
        <folder>tmpl</folder>
        <filename module="mod_jmonoslideshow">mod_jmonoslideshow.php</filename>
    </files>
    <languages folder="site/language">
        <language tag="en-GB">en-GB/en-GB.mod_jmonoslideshow.ini</language>
    </languages>
    <params>
        <param name="moduleclassSfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
        
		<param name="addSwfobject" type="radio" default="1" label="Add swfobject js lib" description="">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
		
		<param name="divId" type="text" default="jmonoslideshow_v1" size="20" label="Div id name" description="Div id name description" />
		
		
        <param name="flashWidth" type="text" default="800" size="2" label="Flash Width" description="Flash Dimension Description" />
        <param name="flashHeight" type="text" default="250" size="2" label="Flash Height" description="Flash Dimension Description" />
        
		<param name="alignSlideshow" type="list" default="center" label="Align slideshow" description="">
            <option value="center">Center</option>
            <option value="left">Left</option>
            <option value="right">Right</option>
        </param>
		
		<param name="imageFolder" type="text" default="images/stories/monoslideshow_v1" label="Images folder" description=""/>
        
        <param name="configXmlName" type="text" default="config.xml" label="Configuration file for slideshow. Must reside under /media/monoslideshow_v1." description=""/>
		
    </params>
</install>
